<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context="views.AnnoucementUserActivity"
    android:padding="5dp"
    android:background="@color/backgroundWhite">

    <ImageView
        android:id="@+id/img_main_announcment"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/txtTituloMeusAnuncios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_main_announcment"
        android:layout_alignTop="@id/img_main_announcment"
        android:paddingTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/app_name"
        android:paddingLeft="5dp"/>

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitulo"
        android:layout_toRightOf="@+id/img_main_announcment"
        android:paddingTop="80dp"
        android:text="@string/dataAtualizacao"
        android:paddingLeft="5dp"/>

</RelativeLayout>
